---
import HeaderLink from './HeaderLink.astro'
import { SITE_TITLE } from '../consts'
---

<header>
  <nav>
    <h2><a href="/" class="font-bold text-2xl">{SITE_TITLE}</a></h2>
    <div class="social-links">
      <a href="https://linkedin.com/in/anumeya-sehgal" target="_blank">
        <span class="sr-only">Follow Me on Linkedin</span>
        <i class="text-2xl fa-brands fa-linkedin"></i>
      </a>
      <a href="https://twitter.com/AnumeyaSehgal" target="_blank">
        <span class="sr-only">Follow Me on Twitter</span>
        <i class="text-2xl fa-brands fa-twitter"></i>
      </a>
      <a href="https://github.com/KreativeThinker" target="_blank">
        <span class="sr-only">Follow me on Github</span>
        <i class="text-2xl fa-brands fa-github"></i>
      </a>
      <a href="https://anumeya.com" target="_blank">
        <span class="sr-only">Visit my portfolio</span>
        <i class="text-2xl fa fa-home"></i>
      </a>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0.5em 1em;
    background: var(--white);
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--black);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
  }
  @media (max-width: 720px) {
    .social-links {
      display: none;
    }
  }
</style>
